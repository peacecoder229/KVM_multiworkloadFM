def get_core_list(corecount=8, cores=None):
    corelist=list()
    if cores:
      core_slices=cores.split(",")
      for i in core_slices:
        (start,end)=i.split("-")
        k = int(start)
        while(k <= int(end)):
          corelist.append(k)
          k=k+1
      return corelist
    else:
      k = 1
      while(k <= int(corecount)):
        corelist.append(k)
        k=k+1
      return corelist

